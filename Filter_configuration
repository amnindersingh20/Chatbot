var dataArray = [];
function getSelectedRadioButtonValue(radioGroupName) {
  radios = document.getElementsByName(radioGroupName);

  var n = radios.length
  for (var i = 0; i < n; i++) {
    if (radios[i].checked) { return radios[i].value }
  }
}
