<!DOCTYPE html>
<html>

<head>
    <title>AI Enrollment Chatbot</title>
    <style>
        /* (Style block remains unchanged) */
    </style>
</head>

<body>
    <form>
        <label><input type="radio" name="populationType" value="AMGMT99"> AMGMT99</label>
        <label><input type="radio" name="populationType" value="BLKACTIVE"> BLKACTIVE</label>
        <label><input type="radio" name="populationType" value="MWTIBEWACTIVE"> MWTIBEWACTIVE</label>
    </form>

    <div id="chat-container">
        <div id="chat-history"></div>
        <div class="typing-indicator" id="typing-indicator">Bot is typing...</div>
    </div>

    <div class="error-message" id="error-message"></div>
    <div id="input-container">
        <input type="text" id="message-input" placeholder="Ask your question" onkeypress="handleEnterKey(event)">
        <button id="send-button" onclick="sendMessage()">
            <svg width="40px" height="40px" viewBox="0 0 24 24" fill="none">
                <path d="M7.75778 6.14799..." fill="#000000"/>
            </svg>
        </button>
    </div>

    <script>
        // API endpoint
        const API_URL = 'https://0ph.execute-api.us-east-1.amazonaws.com/Dev/chat';

        // Three distinct constMsg objects for each population type
        const constMsg1 = {
            populationType: "AMGMT99",
            pageName: "Page A",
            enrollmentDeadlineDate: "",
            availableOptions: [],
            electedOption: {}
        };

        const constMsg2 = {
            populationType: "BLKACTIVE",
            pageName: "Page B",
            enrollmentDeadlineDate: "",
            availableOptions: [],
            electedOption: {}
        };

        const constMsg3 = {
            populationType: "MWTIBEWACTIVE",
            pageName: "Page C",
            enrollmentDeadlineDate: "",
            availableOptions: [],
            electedOption: {}
        };

        let activeConstMsg = constMsg1; // Default selection

        // Update activeConstMsg on radio change
        document.querySelectorAll('input[name="populationType"]').forEach(radio => {
            radio.addEventListener('change', e => {
                switch (e.target.value) {
                    case "AMGMT99": activeConstMsg = constMsg1; break;
                    case "BLKACTIVE": activeConstMsg = constMsg2; break;
                    case "MWTIBEWACTIVE": activeConstMsg = constMsg3; break;
                }
                sessionStorage.setItem("constMsg", JSON.stringify(activeConstMsg));
            });
        });

        // Handle Enter key for single-line submit
        function handleEnterKey(e) {
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                sendMessage();
            }
        }

        // Utility to append messages to chat
        function appendMessage(msg, isUser) {
            const container = document.getElementById('chat-history');
            const div = document.createElement('div');
            div.className = 'message ' + (isUser ? 'user-message' : 'bot-message');
            const bubble = document.createElement('div');
            bubble.className = 'message-bubble';
            bubble.textContent = msg;
            div.appendChild(bubble);
            container.appendChild(div);
            container.scrollTop = container.scrollHeight;
        }

        // Send user message to API
        async function sendMessage() {
            const inputEl = document.getElementById('message-input');
            const text = inputEl.value.trim();
            if (!text) return;
            inputEl.value = '';
            document.getElementById('error-message').textContent = '';
            appendMessage(text, true);
            document.getElementById('typing-indicator').style.display = 'block';

            // Build parameters array
            const params = [
                { name: 'condition', value: text },
                { name: 'populationType', value: activeConstMsg.populationType }
            ];
            activeConstMsg.availableOptions.forEach(opt => {
                params.push({ name: 'plan', value: String(opt.optionId) });
            });

            // Construct full payload
            const payload = {
                parameters: params,
                pageName: activeConstMsg.pageName,
                populationType: activeConstMsg.populationType,
                enrollmentDeadlineDate: activeConstMsg.enrollmentDeadlineDate,
                availableOptions: activeConstMsg.availableOptions,
                electedOption: activeConstMsg.electedOption
            };

            try {
                const res = await fetch(API_URL, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });
                if (!res.ok) throw new Error(`HTTP ${res.status}`);
                const data = await res.json();
                // Assuming API returns { message: '...' }
                const reply = data.message || 'No response';
                appendMessage(reply, false);
            } catch (err) {
                document.getElementById('error-message').textContent = `Error: ${err.message}`;
            } finally {
                document.getElementById('typing-indicator').style.display = 'none';
            }
        }
    </script>
</body>

</html>

