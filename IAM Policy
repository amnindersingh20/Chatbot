import logging
import boto3
from langchain_aws import ChatBedrock
from langchain_aws.retrievers import AmazonKnowledgeBasesRetriever
from langchain.chains import ConversationalRetrievalChain
from langchain_core.chat_history import InMemoryChatMessageHistory
from langchain_core.runnables.history import RunnableWithMessageHistory

# — Logging —
logging.basicConfig(level=logging.INFO)

# — AWS / Bedrock setup —
session = boto3.Session(profile_name="Amder")
llm = ChatBedrock(
    model_id="anthropic.claude-3-5-sonnet-2020-v1:0",
    region_name="us-east-1",
    client=session.client("bedrock-runtime", region_name="us-east-1")
)
retriever = AmazonKnowledgeBasesRetriever(
    knowledge_base_id="arn:aws:bedrock:us-east-1:123456789012:knowledge-base/my-kb-id",
    retrieval_config={
        "vectorSearchConfiguration": {
            "numberOfResults": 5,
            "overrideSearchType": "HYBRID"
        }
    },
    client=session.client("bedrock-agent-runtime", region_name="us-east-1")
)

# — Build chain *without* in-chain memory, but return generated question —
qa_chain = ConversationalRetrievalChain.from_llm(
    llm=llm,
    retriever=retriever,
    return_source_documents=True,
    return_generated_question=True,
    verbose=False
)

# — In-process chat history & Runnable wrapper —
chat_history_memory = InMemoryChatMessageHistory()
runnable = RunnableWithMessageHistory(
    qa_chain,
    lambda _: chat_history_memory,
    input_messages_key="question",
    history_messages_key="chat_history"
)

session_id = "my-session"

# — CLI loop —
if __name__ == "__main__":
    print("Type 'reset' to clear context, 'exit' to quit.")
    while True:
        user_input = input("You: ").strip()
        if user_input.lower() in {"exit", "quit"}:
            break
        if user_input.lower() == "reset":
            chat_history_memory.clear()
            print("🧹 Context reset!")
            continue

        # Invoke via Runnable (auto-manages context)
        result = runnable.invoke(
            {"question": user_input},
            config={"configurable": {"session_id": session_id}}
        )

        # 1⃣ Rewritten question check
        rewritten = result.get("question")
        if rewritten and rewritten != user_input:
            print("🔄  Rewritten question (used context):", rewritten)
        else:
            print("👉  No rewriting — treated as fresh question.")

        # 2⃣ Source document check
        docs = result.get("source_documents", [])
        if docs:
            print(f"📚 Retrieved {len(docs)} doc(s) from KB; first snippet:")
            print(docs[0].page_content[:200], "…")
        else:
            print("🤖  No KB retrieval — pure LLM response.")

        # 3⃣ Actual answer
        answer = result.get("answer")
        print("\n💬 Claude:", answer)

        # 4⃣ Print running history
        print("\n📝 Conversation history so far:")
        for msg in chat_history_memory.messages:
            print(f"{msg.type.capitalize()}: {msg.content}")
        print("\n" + "-"*40 + "\n")
