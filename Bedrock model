function escapeSpecialChars(str) {
  if (!str) return "";
  return str
    .replace(/&/g, "&amp;")
    .replace(/</g, "&lt;")
    .replace(/>/g, "&gt;")
    .replace(/"/g, "&quot;")
    .replace(/'/g, "&#39;");
}




$("#submit").on("click", function () {
  let rawText = $("#q8text").val();
  let safeText = escapeSpecialChars(rawText);
  sessionStorage.setItem("r37", safeText);
  storeData();
})
