function sanitizeInput(str) {
  if (!str) return "";
  // Keep only letters (a-z, A-Z), numbers (0-9), and spaces
  return str.replace(/[^a-zA-Z0-9 ]/g, "");
}

$("#submit").on("click", function () {
  let rawText = $("#q8text").val();
  let safeText = sanitizeInput(rawText); // remove all special chars including !
  sessionStorage.setItem("r37", safeText);
  storeData();
})

